<?xml version='1.0' encoding='utf-8'?>
<widget id="com.tool4us.shareit" version="1.0.7" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>SHERIT</name>
    <description>
        A simple application that send or receive simple text data between deivces.
    </description>
    <author email="toolet4us@gmail.com" href="https://www.tool4.us">
        Tool4Us
    </author>
    <content src="app.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
